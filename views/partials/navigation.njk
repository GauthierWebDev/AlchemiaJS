<nav class="flex gap-4 justify-between items-center max-w-full w-[80rem] mx-auto p-2 text-inherit">
  <div>
    <a href="{{ "home" | page }}" class="text-3xl transition-colors hover:text-amber-100 z-50">
      {{ "GLOBAL.TITLE" | translate }}
    </a>
  </div>

  {% if availableLanguages and availableLanguages.length >= 2 %}
    <select
      class="bg-transparent border-none cursor-pointer focus:outline-none text-lg py-2"
      id="language-select"
    >
      {% for language in availableLanguages %}
        <option
          value="{{ language.code }}"
          class="text-slate-950"
          {% if language.code == lang %}
            selected
          {% endif %}
        >
          {{ language.flag }}
          {{ language.name }}
        </option>
      {% endfor %}
    </select>
  {% endif %}
</nav>